<div class="p-2 w-full">
  <div class="flex">
    <h1 class="text-xl font-semibold w-6/12"><%= @document.file.filename%> </h1>
    <h1 class="text-xl font-semibold w-3/12"> Sessions</h1>
    <%= link_to new_document_chat_session_path, data:{turbo_frame: dom_id(ChatSession.new) }, class: 'w-3/12' do %>
      <i class="text-xl text-indigo-600 font-medium flex border rounded-lg border-2 border-indigo-600 cursor-pointer self-center">
        <%= image_tag('add.svg', size:"25x25") %>
        <span class="pl-1">New session</span>
      </i>
    <% end %>
  </div>

  <div class="flex">
    <div class="w-1/2 overflow-y-scroll" style="height: 720px;">
      <ask-it-pdf-viewer props-json='{"encodedFile":<%= @document.attachment_to_base64.to_json %>}'/>
    </div>
    <div class="w-1/2">
      <%= turbo_frame_tag ChatSession.new , class: "full-width"%>
      <%= turbo_frame_tag "chat_session_list", class: "flex-col" do %>
        <%= render @chat_sessions %>
      <% end %>
    </div>
  </div>

</div>
