<div class="p-2 w-full">
  <div class="flex">
    <h1 class="text-xl font-semibold w-6/12"><%= @document.file.filename%> </h1>
    <div class="border-b border-slate-400 flex pb-3 w-6/12">
      <h1 class="text-xl font-semibold w-1/2"> Chat sessions </h1>
      <div class="w-1/2 flex justify-end">
        <%= link_to new_document_chat_session_path, data:{turbo_frame: dom_id(ChatSession.new) }, class: 'flex relative' do %>
          <i
            class="text-md bg-indigo-600 font-small flex cursor-pointer self-end text-white p-2 rounded-md hover:-translate-y-1 hover:-translate-x-1 easy-out duration-150 z-10">
            <span class="pl-1 text-right">New session</span>
          </i>
          <div class="absolute bg-black top-0 left-0 w-full h-full rounded-md"></div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="flex">
    <%= render 'pdf_viewer' %>
    <div class="w-1/2">
      <div class="flex w-full mt-3 mb-3">
        <%= turbo_frame_tag ChatSession.new , class: "flex w-full"%>
      </div>
      <div class="bg-white py-2 px-3 border border-neutral-900 rounded-lg">
        <%= turbo_frame_tag "chat_session_list", class: "flex-col" do %>
          <div class="flex">
            <div class="w-3/6 font-semibold">Title</div>
            <div class="w-2/6 font-semibold">Questions</div>
            <div class="w-1/6 font-semibold"></div>
          </div>
          <%= render @chat_sessions %>
        <% end %>
      </div>
    </div>
  </div>
</div>
