<div class="p-2 w-full">
  <div class="flex">
    <h1 class="text-xl font-semibold w-6/12"><%= @document.file.filename%> </h1>
    <div class="w-6/12 border-b border-slate-400 flex pb-3">
      <h1 class="text-xl font-semibold w-1/2"> Sessions</h1>
      <%= link_to new_document_chat_session_path, data:{turbo_frame: dom_id(ChatSession.new) }, class: 'w-1/2' do %>
        <i class="text-lg text-indigo-600 font-medium flex cursor-pointer self-center">
          <%= image_tag('add.svg', size:"25x25") %>
          <span class="pl-1 text-right">New session</span>
        </i>
      <% end %>
    </div>
  </div>

  <div class="flex">

    <%= render 'pdf_viewer' %>

    <div class="w-1/2">
      <%= turbo_frame_tag ChatSession.new , class: "full-width mt-3"%>
      <%= turbo_frame_tag "chat_session_list", class: "flex-col" do %>
        <%= render @chat_sessions %>
      <% end %>
    </div>
  </div>
</div>
