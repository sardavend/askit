<%= form_with model: [@document, chat_session], class: "flex full-width items-center" do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "Write a topic, subject to this chat session ", class: "ml-1 rounded-lg" %>
    <%= f.submit "Save", class: "ml-1 border border-2 rounded-lg border-indigo-600 cursor-pointer p-1" %>
    <%= link_to "cancel", document_chat_sessions_path %>
<% end %>
